/* CSS Responsive Amélioré pour les Pages Admin */
/* Optimisé pour mobile et tablette */

/* Reset et base */
* {
    box-sizing: border-box;
}

body {
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    font-size: 16px; /* Base font size pour éviter le zoom iOS */
}

/* Containers responsifs */
.container, .container-fluid {
    padding-left: 15px;
    padding-right: 15px;
}

@media (max-width: 768px) {
    .container, .container-fluid {
        padding-left: 10px;
        padding-right: 10px;
    }
}

@media (max-width: 480px) {
    .container, .container-fluid {
        padding-left: 5px;
        padding-right: 5px;
    }
}

/* Typography responsive */
@media (max-width: 768px) {
    h1, .h1 { font-size: 1.8rem !important; }
    h2, .h2 { font-size: 1.5rem !important; }
    h3, .h3 { font-size: 1.3rem !important; }
    h4, .h4 { font-size: 1.1rem !important; }
    h5, .h5 { font-size: 1rem !important; }
    h6, .h6 { font-size: 0.9rem !important; }
    
    .display-1 { font-size: 2.5rem !important; }
    .display-2 { font-size: 2rem !important; }
    .display-3 { font-size: 1.8rem !important; }
    .display-4 { font-size: 1.5rem !important; }
    .display-5 { font-size: 1.3rem !important; }
    .display-6 { font-size: 1.1rem !important; }
    
    .lead { font-size: 1rem !important; }
}

@media (max-width: 480px) {
    h1, .h1 { font-size: 1.5rem !important; }
    h2, .h2 { font-size: 1.3rem !important; }
    h3, .h3 { font-size: 1.1rem !important; }
    h4, .h4 { font-size: 1rem !important; }
    h5, .h5 { font-size: 0.9rem !important; }
    h6, .h6 { font-size: 0.8rem !important; }
    
    .display-1 { font-size: 2rem !important; }
    .display-2 { font-size: 1.8rem !important; }
    .display-3 { font-size: 1.5rem !important; }
    .display-4 { font-size: 1.3rem !important; }
    .display-5 { font-size: 1.1rem !important; }
    .display-6 { font-size: 1rem !important; }
    
    .lead { font-size: 0.9rem !important; }
}

/* Cartes responsives */
.card {
    margin-bottom: 1rem;
}

@media (max-width: 768px) {
    .card {
        margin-bottom: 0.75rem;
        border-radius: 0.5rem;
    }
    
    .card-body {
        padding: 1rem;
    }
    
    .card-header {
        padding: 0.75rem 1rem;
    }
}

@media (max-width: 480px) {
    .card {
        margin-bottom: 0.5rem;
        border-radius: 0.375rem;
    }
    
    .card-body {
        padding: 0.75rem;
    }
    
    .card-header {
        padding: 0.5rem 0.75rem;
    }
}

/* Tableaux responsifs */
@media (max-width: 768px) {
    .table-responsive {
        font-size: 0.85rem;
    }
    
    .table td, .table th {
        padding: 0.5rem 0.25rem;
        font-size: 0.8rem;
        line-height: 1.3;
    }
    
    .table thead th {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
}

@media (max-width: 480px) {
    .table-responsive {
        font-size: 0.75rem;
    }
    
    .table td, .table th {
        padding: 0.375rem 0.125rem;
        font-size: 0.7rem;
    }
    
    .table thead th {
        font-size: 0.65rem;
    }
}

/* Boutons responsifs */
@media (max-width: 768px) {
    .btn {
        padding: 0.5rem 0.75rem;
        font-size: 0.85rem;
        line-height: 1.4;
    }
    
    .btn-lg {
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
    }
    
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }
    
    .btn-group .btn {
        padding: 0.375rem 0.5rem;
        font-size: 0.75rem;
    }
}

@media (max-width: 480px) {
    .btn {
        padding: 0.375rem 0.5rem;
        font-size: 0.75rem;
    }
    
    .btn-lg {
        padding: 0.5rem 0.75rem;
        font-size: 0.85rem;
    }
    
    .btn-sm {
        padding: 0.125rem 0.375rem;
        font-size: 0.65rem;
    }
}

/* Formulaires et inputs */
@media (max-width: 768px) {
    .form-control {
        font-size: 16px; /* Évite le zoom sur iOS */
        padding: 0.5rem 0.75rem;
    }
    
    .form-select {
        font-size: 16px;
        padding: 0.5rem 0.75rem;
    }
    
    .form-label {
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }
}

@media (max-width: 480px) {
    .form-control, .form-select {
        padding: 0.375rem 0.5rem;
    }
    
    .form-label {
        font-size: 0.85rem;
    }
}

/* Modales responsives */
@media (max-width: 768px) {
    .modal-dialog {
        margin: 0.5rem;
        max-width: calc(100% - 1rem);
    }
    
    .modal-content {
        border-radius: 0.75rem;
    }
    
    .modal-header {
        padding: 1rem;
    }
    
    .modal-body {
        padding: 1rem;
    }
    
    .modal-footer {
        padding: 0.75rem 1rem;
    }
}

@media (max-width: 480px) {
    .modal-dialog {
        margin: 0.25rem;
        max-width: calc(100% - 0.5rem);
    }
    
    .modal-header, .modal-body, .modal-footer {
        padding: 0.75rem;
    }
}

/* Stats cards - TOUJOURS en ligne horizontale */
.stats-row, .row.g-4 {
    display: flex !important;
    flex-wrap: nowrap !important;
    gap: 1rem;
    width: 100%;
}

.stats-card, .row.g-4 > .col-md-3 {
    flex: 1 !important;
    min-width: 0 !important;
}

@media (max-width: 768px) {
    .stats-row, .row.g-4 {
        gap: 0.5rem;
    }
    
    .stats-card, .row.g-4 > .col-md-3 {
        flex: 1 !important;
        min-width: 0 !important;
    }
    
    .stats-card {
        padding: 0.75rem 0.5rem !important;
        min-height: 120px !important;
    }
    
    .stats-card .display-4 {
        font-size: 1.5rem !important;
    }
    
    .stats-card h3 {
        font-size: 1rem !important;
    }
    
    .stats-card p {
        font-size: 0.75rem !important;
    }
}

@media (max-width: 480px) {
    .stats-row, .row.g-4 {
        gap: 0.25rem;
    }
    
    .stats-card {
        padding: 0.5rem 0.25rem !important;
        min-height: 100px !important;
    }
    
    .stats-card .display-4 {
        font-size: 1.2rem !important;
    }
    
    .stats-card h3 {
        font-size: 0.85rem !important;
    }
    
    .stats-card p {
        font-size: 0.65rem !important;
    }
}

@media (max-width: 320px) {
    .stats-row, .row.g-4 {
        gap: 0.125rem;
    }
    
    .stats-card {
        padding: 0.375rem 0.125rem !important;
        min-height: 80px !important;
    }
    
    .stats-card .display-4 {
        font-size: 1rem !important;
    }
    
    .stats-card h3 {
        font-size: 0.7rem !important;
    }
    
    .stats-card p {
        font-size: 0.55rem !important;
    }
}

/* Navigation et sidebar responsive */
@media (max-width: 991.98px) {
    .main-content {
        padding-left: 0 !important;
    }
    
    body.mobile-view {
        font-size: 14px;
    }
}

/* Optimisations spécifiques pour l'interface admin */
.admin-section {
    padding: 1rem;
}

@media (max-width: 768px) {
    .admin-section {
        padding: 0.75rem;
    }
}

@media (max-width: 480px) {
    .admin-section {
        padding: 0.5rem;
    }
}

/* CORRECTION CARTES STATISTIQUES ADMIN-MESSAGES */
/* Affichage horizontal avec cartes larges utilisant tout l'espace */
.admin-messages .row.g-4 {
    display: flex !important;
    flex-wrap: nowrap !important;
    justify-content: stretch !important;
    align-items: stretch !important;
    gap: 1.5rem !important;
    margin: 0 !important;
    width: 100% !important;
    padding: 0 !important;
}

.admin-messages .col-md-3 {
    flex: 1 1 25% !important;
    min-width: 220px !important;
    max-width: none !important;
    padding: 0 !important;
    display: flex !important;
    align-items: stretch !important;
}

.admin-messages .stats-card {
    display: flex !important;
    flex-direction: column !important;
    justify-content: space-evenly !important;
    align-items: center !important;
    width: 100% !important;
    height: 180px !important;
    min-height: 180px !important;
    max-height: 180px !important;
    padding: 1.5rem 1rem !important;
    text-align: center !important;
    background: white !important;
    border-radius: 15px !important;
    box-shadow: 0 6px 12px rgba(0,0,0,0.1) !important;
    border: 1px solid #e9ecef !important;
    transition: transform 0.3s ease, box-shadow 0.3s ease !important;
    position: relative !important;
    overflow: hidden !important;
}

.admin-messages .stats-card:hover {
    transform: translateY(-3px) !important;
    box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
}

.admin-messages .stats-card .display-4 {
    font-size: 2.5rem !important;
    font-weight: 700 !important;
    line-height: 1 !important;
    margin: 0 !important;
    color: #2c3e50 !important;
    flex-shrink: 0 !important;
}

.admin-messages .stats-card h3 {
    font-size: 1rem !important;
    margin: 0.5rem 0 0 0 !important;
    line-height: 1.2 !important;
    color: #495057 !important;
    font-weight: 600 !important;
    flex-shrink: 0 !important;
}

.admin-messages .stats-card p {
    font-size: 0.85rem !important;
    margin: 0.25rem 0 0 0 !important;
    opacity: 0.8 !important;
    color: #6c757d !important;
    flex-shrink: 0 !important;
}

.admin-messages .stats-card i {
    font-size: 2.2rem !important;
    margin-bottom: 0.5rem !important;
    opacity: 0.7 !important;
    flex-shrink: 0 !important;
}

/* Header page admin responsive */
.admin-messages .card.bg-primary .card-body {
    padding: 2rem 1rem;
}

/* Couleurs spécifiques pour chaque carte de statistique */
.admin-messages .stats-card:nth-child(1) {
    border-left: 4px solid #007bff !important;
}

.admin-messages .stats-card:nth-child(1) i {
    color: #007bff !important;
}

.admin-messages .stats-card:nth-child(2) {
    border-left: 4px solid #28a745 !important;
}

.admin-messages .stats-card:nth-child(2) i {
    color: #28a745 !important;
}

.admin-messages .stats-card:nth-child(3) {
    border-left: 4px solid #ffc107 !important;
}

.admin-messages .stats-card:nth-child(3) i {
    color: #ffc107 !important;
}

.admin-messages .stats-card:nth-child(4) {
    border-left: 4px solid #dc3545 !important;
}

.admin-messages .stats-card:nth-child(4) i {
    color: #dc3545 !important;
}

@media (max-width: 768px) {
    .admin-messages .card.bg-primary .card-body {
        padding: 1.5rem 0.75rem;
    }
    
    .admin-messages .display-6 {
        font-size: 1.2rem !important;
    }
    
    .admin-messages .lead {
        font-size: 0.9rem !important;
    }
    
    /* Cartes de stats sur mobile - maintenir alignement horizontal */
    .admin-messages .row.g-4 {
        gap: 0.75rem !important;
        flex-wrap: nowrap !important;
        justify-content: space-between !important;
    }
    
    .admin-messages .col-md-3 {
        flex: 1 1 0 !important;
        min-width: 0 !important;
        max-width: none !important;
        padding: 0 !important;
    }
    
    .admin-messages .stats-card {
        height: 140px !important;
        min-height: 140px !important;
        max-height: 140px !important;
        padding: 0.75rem 0.5rem !important;
    }
    
    .admin-messages .stats-card .display-4 {
        font-size: 2rem !important;
    }
    
    .admin-messages .stats-card h3 {
        font-size: 0.85rem !important;
        margin: 0.25rem 0 0 0 !important;
    }
    
    .admin-messages .stats-card p {
        font-size: 0.75rem !important;
    }
    
    .admin-messages .stats-card i {
        font-size: 1.8rem !important;
        margin-bottom: 0.25rem !important;
    }
}

@media (max-width: 480px) {
    .admin-messages .card.bg-primary .card-body {
        padding: 1rem 0.5rem;
    }
    
    .admin-messages .display-6 {
        font-size: 1.1rem !important;
    }
    
    .admin-messages .lead {
        font-size: 0.8rem !important;
    }
    
    /* Cartes de stats sur très petits écrans */
    .admin-messages .row.g-4 {
        gap: 0.5rem !important;
    }
    
    .admin-messages .stats-card {
        height: 120px !important;
        min-height: 120px !important;
        max-height: 120px !important;
        padding: 0.5rem 0.25rem !important;
    }
    
    .admin-messages .stats-card .display-4 {
        font-size: 1.6rem !important;
    }
    
    .admin-messages .stats-card h3 {
        font-size: 0.75rem !important;
    }
    
    .admin-messages .stats-card p {
        font-size: 0.65rem !important;
    }
    
    .admin-messages .stats-card i {
        font-size: 1.5rem !important;
        margin-bottom: 0.2rem !important;
    }
}

@media (max-width: 320px) {
    .admin-messages .row.g-4 {
        gap: 0.25rem !important;
    }
    
    .admin-messages .stats-card {
        height: 100px !important;
        min-height: 100px !important;
        max-height: 100px !important;
        padding: 0.375rem 0.125rem !important;
    }
    
    .admin-messages .stats-card .display-4 {
        font-size: 1.4rem !important;
    }
    
    .admin-messages .stats-card h3 {
        font-size: 0.65rem !important;
        margin: 0.1rem 0 0 0 !important;
    }
    
    .admin-messages .stats-card p {
        font-size: 0.55rem !important;
    }
    
    .admin-messages .stats-card i {
        font-size: 1.2rem !important;
        margin-bottom: 0.1rem !important;
    }
}

/* Touch optimizations */
@media (pointer: coarse) {
    .btn, .form-control, .form-select {
        min-height: 44px; /* Recommandation Apple pour les zones tactiles */
    }
    
    .table td, .table th {
        min-height: 44px;
        vertical-align: middle;
    }
}

/* Prevent horizontal scroll */
html, body {
    max-width: 100%;
    overflow-x: hidden;
}

/* Améliorer les performances sur mobile */
* {
    -webkit-tap-highlight-color: transparent;
}

.card, .btn, .modal-content {
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
}

